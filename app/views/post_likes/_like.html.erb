<% if user_signed_in? %>
  <% if current_user.like_posts.include?(post) %>
    <%= link_to post_post_likes_path(post.id), class: "like-link", method: :delete, remote: true do %> <%= post.post_likes.count %>
      <i class="fas fa-heart unlike-btn"></i>
    <% end %>
  <% else %>
    <%= link_to post_post_likes_path(post.id), class: "like-link", method: :post, remote: true do %> <%= post.post_likes.count %>
      <i class="fas fa-heart like-btn"></i>
    <% end %>
  <% end %>
<% end %>